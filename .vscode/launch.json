    "version": "0.2.0",
    "configurations": [
        {
            "name": "RTK Plugin",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/install/mqsls/lib/mqsls/rtk_plugin_node",
            "args": ["--ros-args", "-p", "port_name:=/dev/ttyACM0"],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "3DOF Controller",
            "type": "cppdbg",
